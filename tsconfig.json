{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["es7"],
    "module": "commonjs",
    "removeComments": true,
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
