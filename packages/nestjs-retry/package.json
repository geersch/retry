{
  "name": "@geersch/nestjs-retry",
  "version": "0.4.3",
  "description": "NestJS interceptor to retry endpoints with configurable backoff strategies.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geersch/retry.git"
  },
  "author": "Christophe Geers",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "!dist/**/*.tsbuildinfo",
    "lib/**/**"
  ],
  "main": "./dist/cjs/index.js",
  "type": "module",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf -rf dist && rimraf coverage && rimraf junit.xml",
    "build": "tsc -b tsconfig.cjs.json tsconfig.esm.json tsconfig.types.json",
    "lint": "eslint \"lib/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier \"lib/**/*.ts\" \"tests/**/*.ts\"",
    "prepack": "yarn clean && yarn build && yarn prepack:cjs && yarn prepack:esm",
    "prepack:cjs": "echo \"{ \\\"type\\\": \\\"commonjs\\\" }\" > ./dist/cjs/package.json",
    "prepack:esm": "echo \"{ \\\"type\\\": \\\"module\\\" }\" > ./dist/esm/package.json",
    "test": "vitest"
  },
  "keywords": [
    "exponential",
    "backoff",
    "jitter",
    "backoff",
    "retry"
  ],
  "bugs": {
    "url": "https://github.com/geersch/retry/issues"
  },
  "homepage": "https://github.com/geersch/retry#readme",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@geersch/retry": "workspace:^",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@swc/core": "^1.10.12",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.4",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.4",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.0.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "@geersch/retry": "workspace:^"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.0.0 || ^10.0.4 || ^11.0.0",
    "@nestjs/core": "^9.0.0 || ^10.0.4 || ^11.0.0",
    "reflect-metadata": "^0.1.12 || ^0.2.0"
  }
}
